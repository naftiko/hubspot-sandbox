meta {
  name: Set a portal flag state
  type: http
  seq: 3
}

put {
  url: {{baseUrl}}/feature-flags/v3/:appId/flags/:flagName/portals/:portalId
  body: json
  auth: apikey
}

params:query {
  hapikey: {{apiKey}}
}

params:path {
  appId: 
  flagName: 
  portalId: 
}

auth:apikey {
  key: hapikey
  value: {{apiKey}}
  placement: queryparams
}

body:json {
  {
    "flagState": ""
  }
}

example {
  name: Example portal flag state (Example portal flag state input)
  
  request: {
    url: {{baseUrl}}/feature-flags/v3/:appId/flags/:flagName/portals/:portalId
    method: PUT
    mode: json
    params:query: {
      hapikey: {{apiKey}}
    }
  
    params:path: {
      appId: 
      flagName: 
      portalId: 
    }
  
    body:json: {
      {
        "flagState": "ON"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: 200
      text: OK
    }
  
    body: {
      type: json
      content: '''
        {
          "appId": 12345678,
          "flagName": "new-dashboard-feature",
          "portalId": 98765432,
          "flagState": "ON"
        }
      '''
    }
  }
}

