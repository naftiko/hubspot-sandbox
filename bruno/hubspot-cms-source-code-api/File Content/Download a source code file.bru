meta {
  name: Download a source code file
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/cms/v3/source-code/:environment/content/:path
  body: none
  auth: apikey
}

params:path {
  environment: 
  path: 
}

headers {
  private-app: {{apiKey}}
}

auth:apikey {
  key: private-app
  value: {{apiKey}}
  placement: header
}

example {
  name: Binary file content
  description: Example binary file download response
  
  request: {
    url: {{baseUrl}}/cms/v3/source-code/:environment/content/:path
    method: GET
    mode: none
    params:path: {
      environment: 
      path: 
    }
  
    headers: {
      private-app: {{apiKey}}
    }
  }
  
  response: {
    headers: {
      Content-Type: application/octet-stream
    }
  
    status: {
      code: 200
      text: OK
    }
  
    body: {
      type: text
      content: '''
        <binary content>
      '''
    }
  }
}

example {
  name: HTML template content
  description: Example HTML template file content
  
  request: {
    url: {{baseUrl}}/cms/v3/source-code/:environment/content/:path
    method: GET
    mode: none
    params:path: {
      environment: 
      path: 
    }
  
    headers: {
      private-app: {{apiKey}}
    }
  }
  
  response: {
    headers: {
      Content-Type: text/html
    }
  
    status: {
      code: 200
      text: OK
    }
  
    body: {
      type: html
      content: '''
        {% extends "templates/layouts/base.html" %}
        {% block content %}
        <article class="blog-post">
          <h1>{{ content.title }}</h1>
          <div class="post-body">
            {{ content.post_body }}
          </div>
        </article>
        {% endblock %}
        
      '''
    }
  }
}

