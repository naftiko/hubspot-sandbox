example {
  name: JavaScript file content
  description: Example JavaScript file content
  
  request: {
    url: {{baseUrl}}/cms/v3/source-code/:environment/content/:path
    method: GET
    mode: none
    params:path: {
      environment: 
      path: 
    }
  
    headers: {
      private-app: {{apiKey}}
    }
  }
  
  response: {
    headers: {
      Content-Type: application/javascript
    }
  
    status: {
      code: 200
      text: OK
    }
  
    body: {
      type: text
      content: '''
        document.addEventListener('DOMContentLoaded', function() {
          const posts = document.querySelectorAll('.blog-post');
          posts.forEach(post => {
            post.classList.add('loaded');
          });
        });
        
      '''
    }
  }
}

